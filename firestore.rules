/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a strict user-ownership model for the FirebaseFlow application.
 *
 * Data Structure:
 * All user data is nested under `/users/{userId}`, ensuring that each user's data is isolated.
 *
 * Key Security Decisions:
 * - Users can only access their own data.
 * - User listing is disallowed to protect user privacy.
 *
 * Denormalization for Authorization:
 * Authorization is based on the path `/users/{userId}`, matching the `request.auth.uid`. No denormalization is required.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    /**
     * @description Manages user profile information. Only the user with the matching userId can access their own data.
     * @path /users/{userId}
     * @allow (create) User 'user_abc' with matching auth UID can create their profile: request.auth.uid == 'user_abc'.
     * @allow (get, update, delete) User 'user_abc' with matching auth UID can read and modify their profile.
     * @deny (create, get, update, delete) User 'user_xyz' cannot access user 'user_abc' data.
     * @principle Enforces document ownership.
     */
    match /users/{userId} {
      allow read, write: if isSignedIn() && isOwner(userId);

      match /notes/{noteId} {
        allow read, write: if isSignedIn() && isOwner(userId);
      }
      
      match /todos/{todoId} {
        allow read, write: if isSignedIn() && isOwner(userId);
      }

      match /conversations/{conversationId} {
        allow read, write: if isSignedIn() && isOwner(userId);

        match /messages/{messageId} {
            allow read, write: if isSignedIn() && isOwner(userId);
        }
      }
    }
  }
}
